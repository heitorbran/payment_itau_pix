<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pix_payment_wizard_form" model="ir.ui.view">
            <field name="name">pix.payment.wizard.form</field>
            <field name="model">pix.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Dados PIX para Pagamento">
                    <sheet>
                        <group>
                            <group>
                                <field name="move_id" readonly="1"/>
                                <button name="action_send_pix" string="Enviar PIX" type="object" class="btn-primary"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="JSON Formatado">
                                <field name="pix_json" widget="text" nolabel="1" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Fechar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

