<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_form_pix" model="ir.ui.view">
            <field name="name">account.payment.form.pix</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="pix_txid" invisible="1"/>
                    <field name="pix_correlation_id" invisible="1"/>
                    <field name="payment_pix_id" invisible="1"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_send_pix_itau"
                            string="Enviar PIX Itaú"
                            type="object"
                            class="btn-primary"
                            readonly="payment_pix_id != False"
                            help="Envia o pagamento via PIX Itaú"
                            invisible="state != 'in_process' or payment_pix_id != False"/>
                    <button name="action_update_payment_pix_status"
                            string="Atualizar status PIX Itaú"
                            type="object"
                            class="btn-secondary"
                            readonly="payment_pix_id != False"
                            help="Atualiza o status do pagamento PIX Itaú"
                            invisible="state != 'in_process'"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="PIX Itaú" invisible="not payment_pix_id">
                        <group>
                            <group>
                                <field name="payment_pix_id" readonly="1"/>
                                <field name="pix_txid" readonly="1"/>
                                <field name="pix_correlation_id" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

